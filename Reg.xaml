<Window x:Class="Cats_Program.Reg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Cats_Program"
        mc:Ignorable="d"
        Title="Window1" Height="250" Width="400">
    <Grid>
        <StackPanel>
            <TextBox x:Name="Login" Margin="10" BorderBrush="White"  materialDesign:HintAssist.Hint="Login"/>
            <PasswordBox x:Name="Password" Margin="10" BorderBrush="White"  materialDesign:HintAssist.Hint="Password"/>
            <Button Content="Завершить регистрацию" Click="Reg_Click" Margin="10"/>
            <Button Content="Выйти" Click="Exit_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
